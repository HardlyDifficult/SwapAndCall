{
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":pinVersions",
    ":doNotPinPackage(node)"
  ],
  "timezone": "America/Los_Angeles",
  "schedule": ["before 3am on monday"],
  "rebaseStalePrs": false,
  "minor": {
    "groupName": "minor and patch updates"
  },
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "major": {
        "groupName": null
      }
    },
    {
      "packagePatterns": ["^eslint"],
      "minor": {
        "groupName": "eslint"
      }
    }
  ]
}
